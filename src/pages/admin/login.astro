---
import '@fontsource-variable/inter';
import '../../styles/global.css';
---

<!doctype html>
<html lang="tr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Giriş Yap | Admin Panel</title>
  </head>
  <body class="bg-gray-100 flex items-center justify-center min-h-screen">
    <div class="bg-white p-8 rounded-2xl shadow-xl w-full max-w-md">
      <div class="text-center mb-8">
        <h1 class="text-2xl font-bold text-[#1E3A1A]">Yönetici Girişi</h1>
        <p class="text-gray-500">Devam etmek için lütfen giriş yapın.</p>
      </div>

      <form id="loginForm" class="space-y-6">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">E-posta</label>
          <input type="email" name="email" required class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-[#1E3A1A] outline-none" placeholder="admin@example.com" />
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Şifre</label>
          <input type="password" name="password" required class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-[#1E3A1A] outline-none" placeholder="••••••••" />
        </div>
        
        <div id="errorMsg" class="text-red-500 text-sm hidden text-center"></div>

        <button type="submit" class="w-full bg-[#1E3A1A] text-white font-bold py-3 rounded-lg hover:bg-[#1E3A1A]/90 transition">
          Giriş Yap
        </button>
      </form>
    </div>

    <script>
      import { pb } from '../../lib/pocketbase';

      // Redirect if already logged in
      if (pb.authStore.isValid) {
        window.location.href = '/admin';
      }

      const form = document.getElementById('loginForm') as HTMLFormElement;
      const errorMsg = document.getElementById('errorMsg');

      form?.addEventListener('submit', async (e) => {
        e.preventDefault();
        const formData = new FormData(form);
        const email = formData.get('email') as string;
        const password = formData.get('password') as string;
        const btn = form.querySelector('button');

        if(btn) btn.disabled = true;

        try {
          // Authenticate with PocketBase
          // Assuming 'users' collection or 'admins' collection. Standard PB uses 'users' for Auth.
          // The user mentioned "email & password" auth.
          await pb.collection('users').authWithPassword(email, password);
          window.location.href = '/admin';
        } catch (err) {
          console.error(err);
          if (errorMsg) {
            errorMsg.textContent = "Giriş başarısız. Lütfen bilgilerinizi kontrol edin.";
            errorMsg.classList.remove('hidden');
          }
          if(btn) btn.disabled = false;
        }
      });
    </script>
  </body>
</html>
